{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices", ":timezone(Asia/Tokyo)", "github>hairihou/renovate-config:node-project"],
  "ignorePresets": [":dependencyDashboard", ":pinDevDependencies"],
  "draftPR": true,
  "minimumReleaseAge": "2 days",
  "postUpdateOptions": ["pnpmDedupe"],
  "prConcurrentLimit": 16,
  "rangeStrategy": "bump",
  "rebaseWhen": "conflicted",
  "schedule": ["after 4:00 before 22:00"],
  "packageRules": [
    {
      "matchManagers": ["mise"],
      "matchPackageNames": ["python"],
      "minimumReleaseAge": "14 days"
    },
    {
      "matchPackageNames": ["renovate"],
      "schedule": ["* 0-3 * * 6"]
    },
    {
      "matchPackageNames": ["@types/node", "happy-dom", "lefthook"],
      "matchUpdateTypes": ["patch"],
      "schedule": ["* * 1 * *"]
    }
  ]
}
