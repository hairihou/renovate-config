{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":timezone(Asia/Tokyo)",
    "customManagers:biomeVersions",
    "helpers:disableTypesNodeMajor",
    "helpers:pinGitHubActionDigestsToSemver",
    "group:definitelyTyped",
    "github>hairihou/renovate-config:node-project"
  ],
  "ignorePresets": [":dependencyDashboard", ":pinDevDependencies"],
  "draftPR": true,
  "postUpdateOptions": ["pnpmDedupe"],
  "prConcurrentLimit": 16,
  "rangeStrategy": "bump",
  "schedule": ["after 4am and before midnight"],
  "packageRules": [
    {
      "matchManagers": ["mise"],
      "matchPackageNames": ["python"],
      "minimumReleaseAge": "14 days"
    },
    {
      "matchPackageNames": ["pipx:git+https://github.com/github/*.git", "renovate"],
      "schedule": ["on the first day of the month"]
    },
    {
      "matchPackageNames": ["@types/node", "happy-dom", "lefthook"],
      "matchUpdateTypes": ["patch"],
      "schedule": ["on the first day of the month"]
    }
  ]
}
