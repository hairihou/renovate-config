{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard",
    "github>hairihou/renovate-config:node-project",
    "github>hairihou/renovate-config:pull-request",
    "github>hairihou/renovate-config:schedule"
  ],
  "packageRules": [
    {
      "groupName": "3rdparty Actions",
      "groupSlug": "3rdparty-actions",
      "matchDepTypes": ["action"],
      "matchPackageNames": ["!/^actions//"],
      "pinDigests": true
    }
  ]
}
