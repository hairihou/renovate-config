{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "bundlers",
      "extends": ["packages:vite"],
      "matchPackageNames": ["rollup-plugin-**"]
    },
    {
      "groupName": "linters",
      "extends": ["packages:linters"],
      "matchPackageNames": [
        "@biomejs/biome",
        "@commitlint/**",
        "globals",
        "lefthook",
        "oxfmt",
        "prettier-**",
        "**eslint-**"
      ]
    },
    {
      "groupName": "npm tools",
      "matchManagers": ["github-actions", "mise"],
      "matchPackageNames": ["bun", "deno", "node", "pnpm"]
    },
    {
      "groupName": "storybook",
      "matchPackageNames": [
        "@chromatic-com/storybook",
        "@storybook/**",
        "eslint-plugin-storybook",
        "storybook"
      ]
    },
    {
      "groupName": "style tools",
      "matchPackageNames": ["@fontsource/**", "@tailwindcss/**", "style-dictionary", "tailwindcss"]
    }
  ]
}
