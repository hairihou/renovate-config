{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["customManagers:biomeVersions", "group:definitelyTyped", "helpers:disableTypesNodeMajor"],
  "packageRules": [
    {
      "groupName": "Bundlers",
      "groupSlug": "bundlers",
      "extends": ["packages:vite"],
      "matchPackageNames": ["rollup-plugin-**"]
    },
    {
      "groupName": "Linters",
      "groupSlug": "linters",
      "extends": ["packages:linters"],
      "matchPackageNames": ["@biomejs/biome", "@commitlint/**", "globals", "lefthook", "prettier-plugin-**", "**/eslint-**", "**-eslint-**"]
    },
    {
      "groupName": "NPM Tools",
      "groupSlug": "npm-tools",
      "matchManagers": ["github-actions", "mise"],
      "matchPackageNames": ["node", "pnpm"]
    },
    {
      "groupName": "Storybook",
      "groupSlug": "storybook",
      "matchPackageNames": ["@chromatic-com/storybook", "@storybook/**", "eslint-plugin-storybook", "storybook"]
    },
    {
      "groupName": "Tailwind",
      "groupSlug": "tailwind",
      "matchPackageNames": ["@fontsource/**", "@tailwindcss/**", "style-dictionary", "tailwindcss"]
    },
    {
      "matchPackageNames": ["renovate"],
      "schedule": ["before 4:00 on monday"]
    },
    {
      "matchPackageNames": ["@types/node", "happy-dom", "lefthook"],
      "matchUpdateTypes": ["patch"],
      "enabled": false
    }
  ]
}
